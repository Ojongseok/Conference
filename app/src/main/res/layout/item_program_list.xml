<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/program_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/program_list_iv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/program_list_iv"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sample_image" />

        <TextView
            android:id="@+id/program_list_dday_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_rec_4dp"
            android:backgroundTint="@color/main_blue"
            android:gravity="center"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:text="디데이"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/program_list_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/program_list_iv_card"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/program_list_iv_card"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/program_list_time_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/program_list_title_tv"
        android:layout_toRightOf="@id/program_list_iv_card"
        android:text="TextView"
        android:textColor="@color/black1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/program_list_time_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/program_list_time_1"
        android:layout_toRightOf="@id/program_list_iv_card"
        android:text="TextView"
        android:textColor="@color/black1"
        android:textSize="12sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/program_list_iv_card"
        android:layout_marginTop="6dp"
        android:background="@color/main_blue">

    </FrameLayout>

</RelativeLayout>